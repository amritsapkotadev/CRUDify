<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/public/images/stylesheet/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex flex-col items-center justify-center min-h-screen">
  <div class="nav mb-5">
    <a href="/" class="text-blue-500 hover:text-blue-700">Create User</a>
  </div>
  
  <div class="bg-white p-8 rounded-lg shadow-lg max-w-4xl w-full mx-auto mt-5">
    <!-- Heading -->
    <h1 class="text-2xl font-bold text-center text-gray-700 mb-6">User Information</h1>

    <!-- User Container -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <% users.forEach(function(user) { %>
        <div class="user flex flex-col items-center p-4 rounded-lg shadow-lg bg-gray-50 transition-transform transform hover:scale-105">
          <!-- Image element with a direct link to the image -->
          <img src="https://www.austinclinic.com.au/wp-content/uploads/2023/02/What-Do-Men-Want-In-2023.webp" alt="<%= user.name %>'s profile image" class="h-24 w-24 rounded-full mb-4 object-cover border-2 border-gray-300">
          <h3 class="text-xl mt-3 tracking-tight text-center font-semibold"><%= user.name %></h3>
          <h5 class="text-zinc-500 text-center"><%= user.email %></h5>
          <div class="flex gap-3 justify-center mt-4">
            <a href="#" class="text-blue-500 hover:text-blue-700">Edit User</a>
            <a href="/delete/<%=user._id%>" class="text-red-500 hover:text-red-700">Delete User</a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
